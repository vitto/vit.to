{% set description = excerpt|striptags %}

{% if collection != '' %}
  {% set image = metadata.home ~ '/' ~ path ~ '/cover.jpg' %}
{% else %}
  {% set image = metadata.home ~ '/img/social-image.png' %}
{% endif %}

{% if date is defined %}
  <meta property="article:published_time" content="{{ date }}">
{% endif %}
<meta property="article:publisher" content="{{ metadata.sharer }}">
{% if collection != '' %}
  <meta property="article:section" content="{{ collection }}">
{% endif %}
{% if tags is defined %}
  <meta property="article:tag" content="{{ tags }}">
{% endif %}

<meta property="og:description" content="{{ description }}">
<meta property="og:image" content="{{ image }}">
<meta property="og:locale" content="{{ metadata.locale }}">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:type" content="article">
<meta property="og:url" content="{{ metadata.home }}/{{ path }}">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="{{ metadata.username.twitter }}">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:image:src" content="{{ image }}">
<meta name="twitter:site" content="{{ metadata.username.twitter }}">
<meta name="twitter:title" content="{{ title }}">
